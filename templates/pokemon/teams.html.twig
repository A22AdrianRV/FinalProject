{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('styles/app.scss') }}">
{% endblock %}
{% block body %}
	<div class="team">
		{% for team in teams %}
			<div>
				<a href="/pokemon/teams/{{team.getId()}}"><img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/{{ team.getPokemonName().getId()}}.png"></img>
			</a>
		</div>
	{% endfor %}
</div>
<div class="currPokemon">
	<img src="{{pokemon != null ? "https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/" ~ pokemon[0].id ~ ".png" : null}}">
	<div id="renderForm">
		{{form(TeamForm)}}
			<div></div>
		</div>
	</div>
	<div class="PokemonForm">
		{{form(form)}}
		</div>
	{% endblock %}
